                        <Label Text="{Binding Title}" FontAttributes="Bold" LineBreakMode="WordWrap" />
                        <Label Text="{Binding Description}" FontAttributes="Italic" LineBreakMode="WordWrap" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>-->
</ContentPage>